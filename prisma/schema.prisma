generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model PropBet {
  id       Int         @id @default(autoincrement())
  topic    String
  choiceA  String
  choiceB  String
  order    Int         @unique
  picks    Pick[]
  answers  AnswerKey[]
}

model Entry {
  id            Int      @id @default(autoincrement())
  playerName    String
  venmoUsername String
  tiebreaker    Int      @default(0)
  createdAt     DateTime @default(now())
  picks         Pick[]
}

model TiebreakerAnswer {
  id           Int @id @default(autoincrement())
  correctTotal Int
}

model Pick {
  id        Int     @id @default(autoincrement())
  entry     Entry   @relation(fields: [entryId], references: [id])
  entryId   Int
  propBet   PropBet @relation(fields: [propBetId], references: [id])
  propBetId Int
  selection String  // "A" or "B"

  @@unique([entryId, propBetId])
}

model AnswerKey {
  id            Int     @id @default(autoincrement())
  propBet       PropBet @relation(fields: [propBetId], references: [id])
  propBetId     Int     @unique
  correctChoice String  // "A" or "B"
}

model AdminUser {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
}

model Settings {
  id                Int     @id @default(1)
  submissionsClosed Boolean @default(false)
}
